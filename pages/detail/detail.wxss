page::after{
  position: fixed; width: 100%; height: 100%;
  background: #f4f4f4; content: '';
  display: block; left: 0; top: 0;
}
page{position: relative;}

.container{
  padding: 45rpx 0;
}

.detail{
  width: 685rpx; margin: 0 auto;
  display: block;
}
.detail .in-banner{
   width: 100%;
   background: #fff; 
   display: block;
   overflow: hidden;
   position: relative;
   max-height: 173.02px;
}
.detail .in-banner .icons{
  position: absolute;
  bottom: 0; left: 0; width: 1005; height: 100%;
}

.product-text{
  position: relative; background: #fff; margin-top: 40rpx;
  padding: 30rpx 30rpx 30rpx 65rpx;
}
.product-text .title{
  line-height: 42rpx; font-size: 32rpx;
}
.product-text .price{
  font-size: 27rpx; line-height: 36rpx; margin-top: 6rpx; color: #666666;
}
.product-text .price text{ font-size: 36rpx; color: #e70000;vertical-align: middle;}
.product-text .text{
  font-size: 27rpx; line-height: 36rpx; margin-top: 6rpx;color: #666666;
}
.product-text .icon{
  position: absolute; width: 72rpx; height: 75rpx; display: block;
  left: 0; top: 0;
}

.rich-content{
   background: #fff;margin-top: 40rpx;
   padding: 0 10rpx; display: block;
}
.rich-content .h3{
  font-size: 28rpx; color: #333; line-height: 70rpx;
   font-weight: normal;
  border-bottom: 1rpx solid #e5e5e5;
  padding-left: 15rpx;
}

.rich-content .box{
  padding: 30rpx 15rpx; display: block;
}
.rich-content .box text{ font-size: 24rpx; line-height: 28rpx;}

.rich-content .box rich-text{
  word-break:break-all;
}

.img-circle {
    border-radius: 50%;
}
.img-rounded {
    border-radius: 6px;
}
.img-thumbnail {
    display: inline-block;
    max-width: 100%;
    height: auto;
    padding: 4px;
    line-height: 1.42857143;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    -webkit-transition: all .2s ease-in-out;
    -o-transition: all .2s ease-in-out;
    transition: all .2s ease-in-out;
}